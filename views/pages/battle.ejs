<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Paper Ball Showdown - Battle</title>
  <link rel="icon" type="image/x-icon" href="./media/nerd.png">
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="./css/custom-style.css">
  <link href="https://fonts.googleapis.com/css2?family=Jua&display=swap" rel="stylesheet">
</head>

<body class="h-screen bg-orange-50">
  <main
    class="lg:grid lg:grid-rows-[auto_1fr] lg:grid-cols-3 flex flex-col lg:items-center items-center h-full container m-auto lg:gap-20 p-20">

    <!-- Logo mobile only -->
    <figure>
      <img class="size-3/4 lg:size-3/5 lg:hidden h-auto mb-20 lg:mb-0 mx-auto" src="./media/logo.svg"
        alt="Paper Ball Showdown logo" />
    </figure>

    <!-- Instruction Text -->
    <p
      class="text-orange-800 opacity-50 text-4xl lg:text-lg text-center lg:text-start lg:order-2 row-start-1 col-start-2 mb-20 lg:mb-0">
      Click on him to throw a paper ball!
    </p>

    <!-- Back Button -->
    <a href="/" class="lg:order-1 row-start-1 col-start-1 text-4xl lg:text-lg px-10 py-5 lg:px-5 lg:py-2 rounded-2xl lg:rounded-lg border-8 lg:border-4 border-orange-800 text-orange-800 w-fit
         hover:bg-orange-800 hover:text-white transition-colors duration-200">
      &lt; Give up!
    </a>

    <!-- Nerd Image and Quote -->
    <section class="my-auto lg:mb-0 row-start-2 col-span-3 justify-self-center relative"
      aria-label="Interactive Nerd Character">
      <blockquote class="nerd-bubble text-orange-800 text-4xl lg:text-lg text-center lg:text-start w-fit">
        <p id="quote-text" class="text-center">
          <!-- Quotes will be generated here by update-quote.js -->
        </p>
      </blockquote>
      <figure>
        <img id="main-nerd" class="size-3/4 lg:size-1/3 !h-auto mx-auto cursor-pointer" src="./media/nerd.png"
          alt="Interactive nerd character" />
      </figure>
      <div id="nerd-throws" class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
    </section>

    <!-- Paper Ball Counter -->
    <section class="flex gap-5 justify-center lg:justify-end items-baseline lg:order-3 row-start-1 col-start-3"
      aria-label="Paper Ball Count">
      <img class="size-1/3 lg:size-1/10 ms-auto" src="./media/paper-ball-brown.png" alt="Paper ball icon" />
      <h1 id="ball-count" class="text-orange-800 text-7xl lg:text-4xl text-center lg:text-start">20/20</h1>
    </section>

  </main>

  <script type="module" src="./js/update-quote.js"></script>
  <script src="./js/throw.js"></script>
</body>

</html>